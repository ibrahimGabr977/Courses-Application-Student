<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="7dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white_color"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:layout_marginBottom="11dp"
    android:layout_marginHorizontal="5dp"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        >



    <ImageView
        android:id="@+id/statistics_holder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="11dp"
        android:background="@drawable/c_main_statistic_holder_imagebg"
        android:src="@drawable/c_main_statistics_holder_icon"
        android:padding="7dp"
        />




    <TextView
        android:id="@+id/statistics_holder_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/statistics_holder_image"
        app:layout_constraintTop_toTopOf="@id/statistics_holder_image"
        app:layout_constraintBottom_toTopOf="@id/statistics_holder_title_text"
        android:textColor="@color/black_color"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="11dp"
        android:textDirection="rtl"
        android:layout_marginBottom="1.5dp"
        />

    <TextView
        android:id="@+id/statistics_holder_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/statistics_holder_value_text"
        app:layout_constraintTop_toBottomOf="@id/statistics_holder_value_text"
        app:layout_constraintBottom_toBottomOf="@id/statistics_holder_image"
        android:textColor="@color/gray_color"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textDirection="rtl"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="1.5dp"
        />



    <TextView
        android:id="@+id/statistics_holder_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/statistics_holder_title_text"
        app:layout_constraintTop_toTopOf="@id/statistics_holder_image"
        app:layout_constraintBottom_toBottomOf="@id/statistics_holder_image"
        android:textColor="@color/gray_color"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="11dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>